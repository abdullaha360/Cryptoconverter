<style>

.form-signin {
  max-width: 400px;
  padding: 15px 35px 45px;
  margin: 0 auto;
  background-color: #fff;
  //border: 1px solid rgba(0,0,0,0.1);  
}
	.form-control {
	  position: relative;
	  font-size: 16px;
	  height: auto;
	  padding: 10px;
	  margin-bottom:1.5em;
		@include box-sizing(border-box);}

</style>

<div class="container container-fit" >

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-signin new_user" } ) do |f| %>
<h2>Forgot your password?</h2> 
  <%= devise_error_messages! %>

  <div class="field"  style="margin-top:1.5em;">
    <!--<%= f.label :email %><br />-->
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control",placeholder: "Email Address" %>
  </div>

  <div class="actions">
    <%= f.submit "Reset password", class: "btn btn-lg btn-primary btn-block" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
