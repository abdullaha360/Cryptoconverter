 <script>
 
$(document).ready(function() {
    $("#e1").select2({theme: "bootstrap"}); 
    $("#e2").select2({theme: "bootstrap"}); 
    
    var myChart = Highcharts.chart('container', {
        chart: {
            type: 'line'
        },
        title: {
            text: 'Price History'
        },
        xAxis: {
            categories: <%=  @dates %>
        },
        yAxis: {
            title: {
                text: 'Price'
            }
        },
        series: [{
            name: 'BitCoin',
            data: <%=  @prices %>
        }]
    });
});

</script>

